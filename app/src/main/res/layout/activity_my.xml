<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.MyActivity">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:actualImageScaleType="focusCrop"
            app:backgroundImage="@drawable/ic_person_black_24dp"
            app:roundAsCircle="true"
            app:failureImage="@drawable/ic_person_black_24dp"
            android:id="@+id/iv_avatar" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="LOVE"
            android:id="@+id/tv_rank"
            android:layout_below="@+id/iv_avatar"
            android:layout_centerHorizontal="true" />

        <ImageView
           android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_back"
            android:src="?homeAsUpIndicator"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <com.technology.lpjxlove.bfans.UI.CustomView.WaveView
            android:id="@+id/wave_view"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_rank"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/press_selector"
                android:id="@+id/relativeLayout_level">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/level"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/imageView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="等级水平"
                    android:textSize="16sp"
                    android:id="@+id/textView5"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />

                <TextView
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="菜鸟"
                    android:textSize="16sp"
                    android:id="@+id/tv_level"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:id="@+id/relativeLayout_circle"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/press_selector">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/imageView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="我的动态"
                    android:textSize="16sp"
                    android:id="@+id/textView8"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />

                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_layout_team"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@drawable/press_selector">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/team"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:id="@+id/imageView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="我的约战"
                    android:textSize="16sp"
                    android:id="@+id/textView7"
                    android:layout_alignTop="@+id/imageView4"
                    android:layout_toRightOf="@+id/imageView4"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_marginLeft="24dp"
                    android:layout_marginStart="24dp" />

                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


            <TextView
                android:layout_margin="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray"
                android:text="最近约战"/>
            <RelativeLayout
                android:id="@+id/relative_layout_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="16dp"
                >
                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_battle_"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_location"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/iv_location"
                    android:layout_toRightOf="@+id/iv_location"
                    android:text="天河区体育中心篮球馆"
                    android:textColor="@color/blue_light"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_content"
                    android:layout_alignStart="@+id/tv_content"
                    android:layout_marginTop="16dp"
                    android:text="约战对象："
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/tv_battle_object"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_battle"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="高中生"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/tv_battle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3vs3"
                    android:textColor="@android:color/background_dark"
                    android:layout_above="@+id/tv_battle_"
                    android:layout_toRightOf="@+id/tv_battle"
                    android:layout_toEndOf="@+id/tv_battle" />

                <TextView
                    android:id="@+id/tv_battle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对战类型："
                    android:textColor="@android:color/background_dark"
                    android:layout_below="@+id/textView2"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2" />

                <TextView
                    android:id="@+id/tv_battle_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开打时间：2016-09-07-下午16：00"
                    android:textColor="@android:color/background_dark"
                    android:layout_below="@+id/tv_battle"
                    android:layout_alignLeft="@+id/tv_battle"
                    android:layout_alignStart="@+id/tv_battle" />

            </RelativeLayout>



        </LinearLayout>


    </ScrollView>



</RelativeLayout>
